<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_marker_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:elevation="6dp">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/hor_small_margin"
        android:layout_marginStart="@dimen/hor_small_margin"
        android:layout_marginTop="@dimen/ver_small_margin"
        android:contentDescription="@null"
        android:src="@drawable/avatar" />


    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_image"
        android:layout_marginLeft="@dimen/hor_small_margin"
        android:layout_marginStart="@dimen/hor_small_margin"
        android:layout_marginTop="@dimen/ver_small_margin"
        android:layout_toEndOf="@id/profile_image"
        android:layout_toRightOf="@+id/profile_image"
        android:text="Елена, 25 лет"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="@dimen/hor_small_margin"
        android:layout_marginStart="@dimen/hor_small_margin"
        android:layout_marginTop="@dimen/ver_small_margin"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_toRightOf="@+id/profile_image"
        android:text="25 февраля 2017 в 11:15\nул. Ярдерцевская 147/2"
        android:textSize="@dimen/marker_text_size" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profile_image"
        android:layout_below="@+id/profile_image"
        android:layout_marginLeft="@dimen/hor_small_margin"
        android:layout_marginStart="@dimen/hor_small_margin"
        android:layout_marginTop="@dimen/ver_small_margin"
        android:layout_marginBottom="@dimen/ver_small_margin"
        android:text="Находится от вас в 178 м\nв кафе Старбакс"
        android:textSize="@dimen/marker_text_size" />

    <Button
        android:id="@+id/more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginLeft="@dimen/hor_small_margin"
        android:layout_marginStart="@dimen/hor_small_margin"
        android:layout_marginRight="@dimen/hor_small_margin"
        android:layout_marginEnd="@dimen/hor_small_margin"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:background="@drawable/cancel_button_shape"
        android:text="Подробнее"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:textSize="@dimen/marker_text_size" />


</RelativeLayout>